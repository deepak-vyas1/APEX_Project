{
  "name": "hrms-application",
  "version": "1.0.0",
  "description": "Human Resource Management System",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "cd frontend && npm install && npx ng build --configuration production && cd ../backend && npm install",
    "render-postbuild": "cd frontend && npm install && npx ng build --configuration production",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && ng serve"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "keywords": ["hrms", "hr", "management", "angular", "nodejs"],
  "author": "Deepak Vyas",
  "license": "MIT"
}